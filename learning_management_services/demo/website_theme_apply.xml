<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <function name="_theme_load" model="ir.module.module" context="{'apply_new_theme': True}">
        <value model="ir.module.module" eval="ref('base.module_theme_clean')"/>
        <value  model="ir.module.module" eval="obj().env.ref('website.default_website')"/>
    </function>

    <function name="make_scss_customization" model="web_editor.assets" context="{'website_id': ref('website.default_website')}">
        <value eval="'/website/static/src/scss/options/colors/user_color_palette.scss'"/>
        <value eval="
            {
                'o-color-1': '#6e3822',
                'o-color-2': '#c7bba5',
                'o-color-3': '#F9F8F6',
                'o-color-4': '#FFFFFF',
                'o-color-5': '#532A1A',
                'footer': 5,
                'footer-custom': 'NULL',
                'menu': 1,
                'menu-custom': 'white',
            }
        "/>
    </function>

    <function name="make_scss_customization" model="web_editor.assets" context="{'website_id': ref('website.default_website')}">
        <value eval="'/website/static/src/scss/options/user_values.scss'"/>
        <value eval="
            {
                'footer-gradient': 'linear-gradient(135deg, rgb(47, 128, 237) 0%, rgb(178, 255, 218) 100%)',
            }
        "/>
    </function>

    <function name="write" model="ir.ui.view">
        <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=ref('website.default_website')).viewref('website.homepage').ids"/>
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('learning_management_services.homepage').arch}"/>
    </function>

</odoo>
