                    <field name="x_handover_performed_by" string="Handover Performed By"/>
                </xpath>
                <xpath expr="//field[@name='x_comments']" position="attributes">
                    <attribute name="placeholder"/>
                    <attribute name="string">Remarks</attribute>
                </xpath>
                <xpath expr="//field[@name='x_comments']" position="after">
                    <field name="x_html_field" string="Declaration" force_save="True" readonly="1"/>
                    <field widget="signature" name="x_customer_signature" string="Customer Signature" options="{&quot;size&quot;:[0,90]}"/>
                    <field widget="file" invisible="1" name="x_installation_images_filename"/>
                </xpath>
            </data>
        </field>
        <field name="mode">extension</field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>
    <record id="industry_fsm_report.x_project_task_worksheet_template_1_ir_ui_view_2" model="ir.ui.view">
