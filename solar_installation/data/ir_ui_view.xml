<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="industry_fsm_report.report_custom_x_project_task_worksheet_template_1" model="ir.ui.view">
        <field name="name">x_project_task_worksheet_template_1</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="x_project_task_worksheet_template_1">
                <div>
                    <div class="row" style="page-break-inside: avoid">
                        <div class="col-6" style="page-break-inside: avoid"/>
                    </div>
                </div>
            </t>
        </field>
    </record>
    <record id="helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.customization</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="mode">extension</field>
        <field name="priority">800</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='email_cc']" position="after">
                    <field name="product_id"/>
                    <field name="lot_id"/>
                </xpath>
                <xpath expr="//field[@name='tracking']" position="after">
                    <field name="x_related_field_128"/>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="x_related_field_8"/>
                </xpath>
            </data>
        </field>
    </record>
    <record id="sale_ord_form" model="ir.ui.view">
        <field name="name">sale.order.form.customization</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="mode">extension</field>
        <field name="priority">160</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='opportunity_id']" position="after">
                    <field name="x_related_field_96" force_save="False"/>
                </xpath>
            </data>
        </field>
    </record>
    <record id="stock_pr_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form.customization</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="mode">extension</field>
        <field name="priority">160</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='removal_date']" position="after">
                    <field name="x_warranty_date" />
                </xpath>
            </data>
        </field>
    </record>
    <record id="industry_fsm_report.x_project_task_worksheet_template_1_ir_ui_view_1" model="ir.ui.view">
        <field name="name">template_view_Default_Worksheet</field>
        <field name="model">x_project_task_worksheet_template_1</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form create="false" duplicate="false">
                <sheet>
                    <h1 invisible="context.get('default_x_project_task_id')">
                        <field name="x_project_task_id"/>
                    </h1>
                    <group>
                        <group>
                            <field name="x_many2one_field_6" domain="[]"/>
                            <field name="x_many2one_field_5" />
                            <field name="x_handover_performed_by" />
                            <field name="x_many2one_field_10"  domain="[('project_id.task_ids', 'ilike', 'Solar Installation')]"/>
                            <field name="x_many2many_field" widget="many2many_tags" />
                        </group>
                        <group name="group_93">
                            <field name="x_date" />
                            <field name="x_commencement_date_time" />
                            <field name="x_completion_date_time" />
                            <field name="x_many2one_field_9" />
                            <field name="x_html_field" force_save="True" readonly="1"/>
                            <field name="x_comments" string="Remarks"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Images">
                            <group>
                                <group>
                                    <field widget="image" name="x_binary_field_4" options="{'zoom':true,'size':[0,90]}" />
                                    
                                    <field widget="image" name="x_image_2" options="{'size':[0,90],'zoom':true}" />
                                </group>
                                <group>
                                    <field widget="image" name="x_image_3" options="{'size':[0,90],'zoom':true}" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <separator/>
                    <group>
                        <group>
                            <field widget="signature" name="x_customer_signature" options="{'size':[0,90]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="template_default_Worksheet" model="ir.ui.view">
        <field name="name">template_view_Default_Worksheet.customization</field>
        <field name="active" eval="False"/>
        <field name="model">x_project_task_worksheet_template_1</field>
        <field name="inherit_id" ref="industry_fsm_report.x_project_task_worksheet_template_1_ir_ui_view_1"/>
        <field name="mode">extension</field>
        <field name="priority">99</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='x_comments']" position="before">
                    <group name="group_93">
            </group>
                    <field name="x_date" />
                    <field name="x_many2one_field_6" domain="[]"/>
                    <field name="x_many2one_field_9" />
                    <field name="x_many2one_field_5" />
                    <field name="x_many2one_field_10" domain="[('project_id.task_ids', 'ilike', 'Solar Installation')]"/>
                    <field name="x_many2many_field" widget="many2many_tags" />
                    <field name="x_commencement_date_time" />
                    <field name="x_completion_date_time" />
                    <field widget="image" name="x_binary_field_4" options="{'zoom':true,'size':[0,90]}" />
                    <field widget="image" name="x_image_2" options="{'size':[0,90],'zoom':true}" />
                    <field widget="image" name="x_image_3" options="{'size':[0,90],'zoom':true}" />
                    <field name="x_handover_performed_by" />
                </xpath>
                <xpath expr="//field[@name='x_comments']" position="attributes">
                    <attribute name="placeholder"/>
                    <attribute name="string">Remarks</attribute>
                </xpath>
                <xpath expr="//field[@name='x_comments']" position="after">
                    <field name="x_html_field" force_save="True" readonly="1"/>
                    <field widget="signature" name="x_customer_signature" options="{'size':[0,90]}"/>
                </xpath>
            </data>
        </field>
    </record>
    <record id="industry_fsm_report.x_project_task_worksheet_template_1_ir_ui_view_2" model="ir.ui.view">
        <field name="name">tree_view_Default_Worksheet</field>
        <field name="model">x_project_task_worksheet_template_1</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" widget="date"/>
                <field name="x_name"/>
            </tree>
        </field>
    </record>
    <record id="industry_fsm_report.x_project_task_worksheet_template_1_ir_ui_view_3" model="ir.ui.view">
        <field name="name">search_view_Default_Worksheet</field>
        <field name="model">x_project_task_worksheet_template_1</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="x_name"/>
                <filter string="Created on" date="create_date" name="create_date"/>
                <filter name="group_by_month" string="Created on" context="{'group_by': 'create_date:month'}"/>
            </search>
        </field>
    </record>
</odoo>
